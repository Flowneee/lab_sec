#include <fstream>
#include <string>
#include <experimental/filesystem>
#include "main.hpp"
#include "gui.hpp"

inline bool isRunFirstTime()
{
    return std::experimental::filesystem::exists("passwd");
}

inline std::string btos(bool in)
{
    return (in ? "true" : "false");
}

IMPLEMENT_APP(MainApp);

bool MainApp::OnInit()
{
    MainFrame* mainWindow = new MainFrame(NULL);
    this->SetTopWindow(mainWindow);
    reinterpret_cast<MainFrame*>(this->GetTopWindow())->login();
    return true;
}
